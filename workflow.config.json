{
  "workflow_description": {
    "name": "transcriptome_assembly",
    "version": 1.0,
    "label": "Transcriptome assembly",
    "type": "transcriptome_assembly",
    "inputs": "raw_fastq/{sample}*fastq.gz",
    "outputs": [
      "results/*",
      "logs/*"
    ],
    "report_index": "results/TA_multiqc_report.html",
    "reports": [
      "results/TA_multiqc_report.html"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "UMI"
  ],
  "gui_params": {
    "primary": {
      "genome_guided": {
        "label": "Use genome-guided assembly?",
        "type": "bool",
        "default": false
      },
      "external_reference": {
        "label": "Use external reference",
        "type": "bool",
        "default": false,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "genome_guided": true
            }
          }
        }
      },
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": ##INCLUDE:reference_info/default_reference.json##,
        "list": ##INCLUDE:reference_info/reference2.json##,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "genome_guided": true
            }
          },
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "external_reference": false
            }
          }
        }
      }
    },
    "detailed": {
      "trinity_strandness": {
        "label": "Trinity tag for reads strandness",
        "type": "string",
        "default": "RF"
      },
      "trinity_kmers": {
        "label": "k-mer values to use in Trinity",
        "type": "string",
        "default": "21;25;31"
      }
    }
  }
}
